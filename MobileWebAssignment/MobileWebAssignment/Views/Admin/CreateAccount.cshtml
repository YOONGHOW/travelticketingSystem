﻿
<!DOCTYPE html>
<html lang="en">

@model RegisterVM

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/ClientCss/RegisterAccount.css" asp-append-version="true">
    <title>Admin Account Registration</title>

    <style>
        html {
            background-image: url('/images/login_background.jpg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
            position: relative;
        }

            html::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5);
                filter: blur(5px);
                z-index: -1;
            }

        body {
            position: relative;
            z-index: 1;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="title">Admin Account Registration</div>
        <br/>
        <div class="content">
            <form method="POST" id="state" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="user-details">

                    <div class="input-box">
                        <label class="details" asp-for="Name">Full Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="input-box">
                        <label class="details" asp-for="Email">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="e.g. xxx@gmail.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="input-box">
                        <label class="details" asp-for="IC">IC Number</label>
                        <input asp-for="IC" class="form-control" placeholder="010203020321" />
                        <span asp-validation-for="IC" class="text-danger"></span>
                    </div>

                    <div class="input-box">
                        <label class="details" asp-for="PhoneNumber">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="e.g. 0121234567" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="input-box">
                        <label class="details" asp-for="Gender">Gender</label>
                        <select asp-for="Gender" class="form-control">
                            <option value="none">Select Gender</option>
                            <option value="M">Male</option>
                            <option value="F">Female</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                    <div class="input-box">
                        <label class="details" asp-for="Password">Password</label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="input-box">
                        <label class="details" asp-for="ConfirmPassword">Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Enter your password again" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="button-container">
                        <input type="submit" value="Create Account">
                        <a href="MemberList">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>

</html>

<script src="/js/jquery.min.js"></script>
<script src="/js/jquery.unobtrusive-ajax.min.js"></script>
<script src="/js/jquery.validate.min.js"></script>
<script src="/js/jquery.validate.unobtrusive.min.js"></script>
<script src="/js/app.js" asp-append-version="true"></script>