﻿
<!DOCTYPE html>
<html lang="en">

@model RegisterVM

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/ClientCss/RegisterAccount.css" asp-append-version="true">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="../js/photo.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.13/jquery.validate.unobtrusive.min.js"></script>
    <title>Member Registration</title>

    <style>
        html {
            background-image: url('/images/login_background.jpg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="title">Registration</div>
        <div class="content">
            <form method="POST" id="state" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="user-details">

                    @* <div class="input-address"> *@
                    @*     <label class="details" asp-for="Photo">Profile Photo</label> *@
                    @*     <label class="upload" tabindex="0"> *@
                    @*         <input asp-for="Photo" class="form-control" type="file" accept="image/*" hidden> *@
                    @*         <img src="/image/photo.jpg" id="drag"> *@
                    @*     </label> *@
                    @*     <span asp-validation-for="Photo" class="text-danger"></span> *@
                    @* </div> *@

                    <div class="input-box">
                        <label class="details" asp-for="Name">Full Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="input-box">
                        <label class="details" asp-for="Email">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="e.g. xxx@gmail.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="input-box">
                        <label class="details" asp-for="IC">IC Number</label>
                        <input asp-for="IC" class="form-control" placeholder="010203020321" />
                        <span asp-validation-for="IC" class="text-danger"></span>
                    </div>

                    <div class="input-box">
                        <label class="details" asp-for="PhoneNumber">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="e.g. 0121234567" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <div class="input-box">
                        <label class="details" asp-for="Gender">Gender</label>
                        <select asp-for="Gender" class="form-control">
                            <option value="none">Select Gender</option>
                            <option value="M">Male</option>
                            <option value="F">Female</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                    <div class="input-box">
                        <label class="details" asp-for="Password">Password</label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="input-box">
                        <label class="details" asp-for="ConfirmPassword">Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Enter your password again" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="button">
                        <input type="submit" value="Register">
                    </div>
                    <div class="button">
                        <a href="Login">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>

</html>