﻿
<!DOCTYPE html>
<html lang="en">

@model RegisterVM

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/ClientCss/RegisterAccount.css" asp-append-version="true">
    <title>Member Registration</title>

    <style>
        html {
            background-image: url('/images/login_background.jpg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
            position: relative;
        }

            html::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5);
                filter: blur(5px);
                z-index: -1;
            }

        body {
            position: relative;
            z-index: 1;
        }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
        // Webcam function
        $(function () {
            let webcamOpen = false;

            // Initialize webcam properties
            Webcam.set({
                width: 360,
                height: 260,
                image_format: 'jpeg',
                jpeg_quality: 90
            });

            // Toggle webcam
            $('#openwebcam').click(function () {
                if (!webcamOpen) {
                    Webcam.attach('#idwebcam');
                    $(this).val('Close Webcam');
                    $('#idwebcam').show(); // Show the webcam container
                    webcamOpen = true;
                } else {
                    Webcam.reset();
                    $(this).val('Open Webcam');
                    $('#idwebcam').hide(); // Hide the webcam container
                    webcamOpen = false;
                }
            });

            // Capture image
            $('#btncapture').click(function () {
                Webcam.snap(function (data_uri) {
                    $("#drag")[0].src = data_uri;
                    $("#PhotoBase64").val(data_uri);
                });
            });

            // Preview uploaded file
            $('input[asp-for="Photo"]').change(function (e) {
                const reader = new FileReader();
                reader.onload = function (event) {
                    $("#drag").attr('src', event.target.result);
                };
                reader.readAsDataURL(e.target.files[0]);
            });
        });

    </script>
</head>

<body>

    <div class="container">
        <div class="title">Registration</div>
        <br/>
        <div class="content">
            <form method="POST" id="state" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="user-details">

                    <div class="input-address">
                        <label class="details">Profile Photo</label>
                        <div class="photo-options">
                            <!-- Webcam  -->
                            <div class="webcam-container">
                                <div id="idwebcam" style="display:none;"></div>
                                <input type="text" id="PhotoBase64" name="PhotoBase64" hidden />
                            </div>

                            <!-- Image File Upload  -->
                            <label class="upload">
                                <input asp-for="Photo" class="form-control" type="file" accept="image/*" hidden>
                                <img src="/images/photo.jpg" id="drag" alt="Profile Photo Preview">
                                <span>Choose a file</span>
                            </label>
                            <div class="button-container">

                            <input type="button" id="openwebcam" value="Open Webcam">
                            <input type="button" id="btncapture" value="Capture">
                            </div>

                        </div>
                        <span asp-validation-for="Photo" class="text-danger"></span>


                    </div>


                    <!--Full Name -->
                    <div class="input-box">
                        <label class="details" asp-for="Name">Full Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!--Email -->
                    <div class="input-box">
                        <label class="details" asp-for="Email">Email</label>
                        <input asp-for="Email" class="form-control" placeholder="e.g. xxx@gmail.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!--IC No.-->
                    <div class="input-box">
                        <label class="details" asp-for="IC">IC Number</label>
                        <input asp-for="IC" class="form-control" placeholder="010203020321" />
                        <span asp-validation-for="IC" class="text-danger"></span>
                    </div>

                    <!--Phone Number -->
                    <div class="input-box">
                        <label class="details" asp-for="PhoneNumber">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="e.g. 0121234567" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>

                    <!--Gender -->
                    <div class="input-box">
                        <label class="details" asp-for="Gender">Gender</label>
                        <select asp-for="Gender" class="form-control">
                            <option value="none">Select Gender</option>
                            <option value="M">Male</option>
                            <option value="F">Female</option>
                        </select>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>

                    <!--Password -->
                    <div class="input-box">
                        <label class="details" asp-for="Password">Password</label>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!--Confirm Password -->
                    <div class="input-box">
                        <label class="details" asp-for="ConfirmPassword">Confirm Password</label>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Enter your password again" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="button-container">
                        <input type="submit" value="Register">
                        <a href="Login">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>

</html>



<script src="/js/WebCam.js" type="text/javascript"></script>
<script src="/js/jquery.min.js"></script>
<script src="/js/jquery.unobtrusive-ajax.min.js"></script>
<script src="/js/jquery.validate.min.js"></script>
<script src="/js/jquery.validate.unobtrusive.min.js"></script>
<script src="/js/app.js" asp-append-version="true"></script>
