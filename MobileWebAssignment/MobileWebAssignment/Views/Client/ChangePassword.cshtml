﻿<!DOCTYPE html>
<html lang="en">

@model ChangePassword

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/ClientCss/ChangePassword.css" asp-append-version="true">
    <title>Change Password</title>

    <style>
        html {
            background-image: url('/images/login_background.jpg');
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
            position: relative;
        }

            html::before {
                content: "";
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0, 0, 0, 0.5);
                filter: blur(5px);
                z-index: -1;
            }

        body {
            position: relative;
            z-index: 1;
        }
    </style>
</head>

<body>


    <div class="container">
        <div class="title">Change Password</div>
       </br>
        <div class="content">
            <form method="POST" id="state" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="user-details">

                    <!-- Current Password -->
                    <div class="input-box">
                        <label class="details" asp-for="CurrentPassword">Current Password</label>
                        <input class="form-control" asp-for="CurrentPassword" type="password" placeholder="Enter your current password" />
                        <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                    </div>

                    <!-- New Password -->
                    <div class="input-box">
                        <label class="details" asp-for="NewPassword">New Password</label>
                        <input class="form-control" asp-for="NewPassword" type="password" placeholder="Enter your new password" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div>

                    <!-- Password compare with new password -->
                    <div class="input-box">
                        <label class="details" asp-for="ConfirmPassword">Confirm Password</label>
                        <input class="form-control" asp-for="ConfirmPassword" type="password" placeholder="Enter your password again" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <!-- Submit Button -->
                    <div class="button-container">
                        <input type="submit" value="Change Password">
                        <a href="Homepage">Cancel</a>
                    </div>
                </div>
            </form>

        </div>
    </div>
</body>
</html>

<script src="/js/jquery.min.js"></script>
<script src="/js/jquery.unobtrusive-ajax.min.js"></script>
<script src="/js/jquery.validate.min.js"></script>
<script src="/js/jquery.validate.unobtrusive.min.js"></script>
<script src="/js/app.js" asp-append-version="true"></script>